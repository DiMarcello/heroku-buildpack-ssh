ENV_DIR=$3

whitelist_regez=${2:-'SSH_KEY'}
for e in $(ls $ENV_DIR); do
    if [ "$e" = "SSH_KEY" ]; then
        export "$e=$(cat $ENV_DIR/$e)"
    fi
done

mkdir -p ~/.ssh/
chmod 700 ~/.ssh/

echo "$SSH_KEY" > ~/.ssh/id_rsa
chmod 400 ~/.ssh/id_rsa

echo 'StrictHostKeyChecking=no' > ~/.ssh/config
chmod 600 ~/.ssh/config

echo "$SSH_KEY"
cat ~/.ssh/id_rsa
cat ~/.ssh/config
